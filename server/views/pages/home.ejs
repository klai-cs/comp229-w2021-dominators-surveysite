<!-- Home content -->   

<div class="container">
    <h1 style="text-align: center">Hello, we are Dominators!</h1>
    
    <p style="text-align: center; font-size:20px">
        <img src="Assets/images/logo.png" alt="Selfie" style="width: 200px; height:200px;  vertical-align:top;margin:15px 50px">
        <br>Here is the Create Survey Site to help you create your own Survey.
        <br><br>
        <% if(typeof displayName == 'string' && displayName) { %>
            <a class="btn btn-warning btn-lg" href="/surveylist/add" role="button">Create A Survey</a>
        <% } else { %>
            <a class="btn btn-warning btn-lg" href="/user/login" role="button">Create A Survey</a>
        <% } %>
        <a class="btn btn-info btn-lg" href="/surveylist" role="button">Survey List</a>

        <br>
        <table class="table table-bordered table-striped table-hover">
            <!-- Heading Row-->
            <tr class="d-flex">
                <th class="text-align: left col-12">Active Survey Name</th>
            </tr>

            <!-- Repeatable Templete Row-->

            <% for(let count =0; count < SurveyList.length; count++) { %>
                <tr class="d-flex">
                    <td class="text-align: left col-12"><%= SurveyList[count].name %></td>
                </tr>
            <% } %>
        </table>

        <br><br>

    </p>

    

</div>
