            <% for(let count =0; count < SurveyList.length; count++) { %>
                <tr class="d-flex">
                    <td class="text-align: left col-12"><%= SurveyList[count].name %></td>
                </tr>

            <% } %>
        </table>

        <br><br>

    </p>

    

</div>

  